<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rc_item_wheather"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/indent_20"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="8dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="4dp"
    app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/title_date_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/lorem"
                android:textSize="@dimen/text_l_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"/>

            <ImageView
                android:id="@+id/image_wheather"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/title_date_weather"
                app:layout_constraintStart_toStartOf="@id/title_date_weather"
                app:layout_constraintEnd_toEndOf="@id/title_date_weather"
                android:layout_marginTop="10dp"
                 />

            <TextView
                android:id="@+id/min_temp_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/image_wheather"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                tools:text="@tools:sample/lorem"
                android:textSize="@dimen/text_l_size"
                />

            <TextView
                android:id="@+id/max_temp_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/min_temp_item"
                app:layout_constraintStart_toStartOf="@id/min_temp_item"
                app:layout_constraintEnd_toEndOf="@id/min_temp_item"
                tools:text="@tools:sample/lorem"
                android:textSize="@dimen/text_l_size"
                android:paddingBottom="4dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
